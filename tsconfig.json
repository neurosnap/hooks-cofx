{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "baseUrl": ".",
    "strict": true,
    "outDir": "./dist",
    "lib": ["es2018", "dom"],
    "declaration": true,
    "jsx": "react"
  },
  "exclude": [
    "node_modules",
    "index.test.ts"
  ],
  "include": [
    "index.ts",
  ]
}
